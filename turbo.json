{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/next",
  "pipeline": {
    "build_css": {
      "inputs": ["lib/**/*.css"],
      "outputs": ["dist/style/**", "dist/style.css"]
    },
    "build": {
      "dependsOn": ["^build", "^build_css"],
      "inputs": ["lib/**/*.tsx", "lib/**/*.ts", "lib/**/*.ts", "lib/**/*.css","src/**/*.jsx"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "dependsOn": ["build_css"],
      "cache": false
    },
    "preview": {
      "dependsOn": ["build"]
    },
    "storybook": {
      "dependsOn": [],
      "cache": false
    },
    "build-storybook": {
      "inputs": ["**.stories.@(tsx|jsx)", "lib/**/*.@(tsx|jsx|css)"],
      "dependsOn": [],
      "outputs": ["docs/**"]
    },
    "deploy": {
      "inputs": ["**.stories.@(tsx|jsx)", "lib/**/*.@(tsx|jsx|css)"],
      "dependsOn": ["build-storybook"],
      "cache": false
    },
    "test": {
      "outputs": ["build"]
    }
  }
}
