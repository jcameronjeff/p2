{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "homepage": "https://ghe.coxautoinc.com/Prism/prism2",
  "scripts": {
    "build": "turbo run build",
    "build_web": "turbo run build_web",
    "test": "turbo run test",
    "test_ui": "turbo run test_ui",
    "deploy": "turbo run deploy",
    "dev": "turbo run dev",
    "storybook": "turbo run storybook --scope=@prism2/react-components",
    "build-storybook": "turbo run build-storybook",
    "appdev": "turbo run dev --scope=example-vite-app",
    "libdev": "turbo run dev --scope=@prism2/react-components"
  },
  "engines": {
    "node": ">=10",
    "pnpm": ">=3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@types/node": "^18.7.13",
    "gh-pages": "^4.0.0",
    "husky": "^8.0.1",
    "lerna": "^5.5.0",
    "react": "^18",
    "ts-node": "^10.9.1",
    "turbo": "1.2.5",
    "typescript": "^4.8.2"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "react",
        "react-dom"
      ]
    },
    "overrides": {
      "glob-parent@<5.1.2": ">=5.1.2",
      "postcss@<7.0.36": ">=7.0.36",
      "trim@<0.0.3": ">=0.0.3",
      "react@<17": ">=18",
      "trim-newlines@<3.0.1": ">=3.0.1"
    }
  },
  "peerDependencies": {
    "ts-node": "^10.9.1"
  }
}
